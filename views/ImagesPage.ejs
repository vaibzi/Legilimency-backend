        <li class="navlinks dissapear"><a href="/public/html/Textbook.html">Textbook Psychology</a></li>

      </ul>

    </nav>

  </header>
	<div style="color: var(--fontcolor);">
		<form action="/" method="POST" enctype="multipart/form-data">
			
			<div>
				<label  for="image">Upload Image</label>
				<input type="file" id="image"
					name="image" value="" required>
			</div>
			<div>
				<button class="btn btn-primary" type="submit">Submit</button>
			</div>
		</form>
	</div>

	<hr>

	<h1 style="color: var(--fontcolor);">Uploaded Images</h1>
	<div style="width: 100%;">
		<% items.forEach(function(image) { %>
		<div>
			<div >
				<img style="width: 70%;" src="data:image/<%=image.img.contentType%>;base64,
					<%=image.img.data.toString('base64')%>">
				<div>
					<h5><%= image.name %></h5>
					


<p><%= image.desc %></p>



				</div>
			</div>
		</div>
		<% }) %>
	</div>

