<body>
	<a name="top"></a>
  <header class="fontwhite">
    <nav>
      <ul>
        <img src="/public/img/fav3.png" alt="" class="favicon">
        <li class="heading"><a href="#top">Legilimens </a></li>

        <div class="dropdown">
          <button id="" onclick="dropdownfunc()" class="dropbtn"><span class="material-symbols-outlined dropbtn">
              menu
            </span>
            <!-- <i class="fa fa-caret-down"></i> -->
          </button>
          <div id="myDropdown" class="dropdown-content">
            <a class="dropdown-content" href="/">Home</a>
            <a class="dropdown-content" href="/articles">Articles</a>
            <a class="dropdown-content" href="/public/html/EverydayLife.html">Community</a>
            <a class="dropdown-content" href="/public/html/Textbook.html">Textbook Psychology</a>
          </div>
        </div>
        <button id="btn" onclick="Toggle()" onclick="onClick" style="color: gray" id="icon"><span
            class="material-symbols-outlined">
            highlight
          </span></button>
        <li class="navlinks dissapear"><a href="/"> Home </a></li>
        <li class="navlinks dissapear"> <a href="/articles"> Articles </a></li>
        <li class="navlinks dissapear"><a href="/public/html/EverydayLife.html"> Community</nobr></a>
